    private void startBtnActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_startBtnActionPerformed
        // TODO add your handling code here:

        
        secondRem = (int) (Double.parseDouble(secondsInput.getText())); 
        minuteRem = (int) (Double.parseDouble(minutesInput.getText()));
        hourRem= (int) (Double.parseDouble(hoursInput.getText()));
        dayRem = (int) (Double.parseDouble(daysInput.getText()));
        
        

        
        
       
        Timer timer = new Timer();
            TimerTask task = new TimerTask(){
                public void run(){
                    //stuff
                    secondRem -= 1;
                    if (secondRem < 0){
                        minuteRem--;
                        secondRem = 59; 
                    }
                    if (minuteRem < 0){
                        hourRem--;
                        minuteRem = 59;
                    }
                    if (hourRem < 0){
                        dayRem--;
                        hourRem = 11;
                    }
                    
                    PrintSeconds = String.valueOf(secondRem);
                    PrintMinutes = String.valueOf(minuteRem);
                    PrintHours = String.valueOf(hourRem);
                    PrintDays = String.valueOf(dayRem);
                    
                    
                   
                    secondsLabel.setText(String.valueOf(secondRem));
                    minutesLabel.setText(String.valueOf(minuteRem));
                    hoursLabel.setText(String.valueOf(hourRem));
                    daysLabel.setText(String.valueOf(dayRem));

                }
            };
            
                timer.scheduleAtFixedRate(task,0,1000);
            
    }//GEN-LAST:event_startBtnActionPerformed

